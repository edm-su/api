{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"labels": ["dependency"],
	"automergeType": "branch",
	"packageRules": [
		{
			"matchUpdateTypes": ["patch", "minor"],
			"automerge": true
		},
		{
			"matchCategories": ["ci"],
			"addLabels": ["ci"],
			"automerge": true
		},
		{
			"matchPackageNames": ["faker"],
			"automerge": true
		},
		{
			"matchCategories": ["docker"],
			"addLabels": ["build"]
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	}
}
